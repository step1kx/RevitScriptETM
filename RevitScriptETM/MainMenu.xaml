<Window x:Class="RevitScriptETM.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:RevitScriptETM" 
        Height="650" Width="1930" Title="Задания">
    <Grid>
        <DataGrid SelectionMode="Single" SelectionUnit="Cell" x:Name="tasksDataGrid"  AutoGenerateColumns="False"  HeadersVisibility="Column" FontFamily="Arial Black" FontSize="11" CanUserReorderColumns="False" Margin="0,0,0,60">
            <DataGrid.Columns>
                <DataGridTextColumn  IsReadOnly="True" Header="№ задания" Binding="{Binding Path=TaskNumber}" Width="100"/>
                <DataGridTextColumn  IsReadOnly="True" Header="Раздел от кого задание" Binding="{Binding  FromSection}" Width="170"/>
                <DataGridTextColumn  IsReadOnly="True" Header="Раздел кому задание" Binding="{Binding  ToSection}" Width="150"/>
                <DataGridTextColumn  IsReadOnly="True" Header="Кто выдал задание" Binding="{Binding   TaskIssuer}" Width="150"/>
                <DataGridCheckBoxColumn  IsReadOnly="False" Header="Чек выполнения задания" Binding="{Binding  TaskCompleted}" Width="200">
                    <DataGridCheckBoxColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                        </Style>
                    </DataGridCheckBoxColumn.CellStyle>
                </DataGridCheckBoxColumn>
                <DataGridTextColumn   IsReadOnly="True" Header="Кто отработал" Binding="{Binding  TaskHandler}" Width="150"/>
                <DataGridCheckBoxColumn IsReadOnly="False" Header="Согласование задания" Binding="{Binding TaskApproval}" Width="200" />
                <DataGridTextColumn  IsReadOnly="True" Header="Кто согласовал" Binding="{Binding  WhoApproval}" Width="200"/>
                <DataGridTemplateColumn Header="Скриншот экрана" Width="SizeToCells" IsReadOnly="True" MaxWidth="250">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding ScreenShot}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn  IsReadOnly="True" Header="Описание задания" Binding="{Binding  TaskDescription}" Width="200" />
                <DataGridTextColumn  IsReadOnly="True" Header="Вид" Binding="{Binding TaskView}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <Button Content="Фильтр заданий" Click="FilterButton_Click" HorizontalAlignment="Left" Margin="30,0,0,15" Width="200" 
        FontFamily="Arial Black" FontSize="20" Height="40" VerticalAlignment="Bottom" Background="#FF85D4DE" />
        <Button Content="Создать задание" Click="TasksCreator_Click" HorizontalAlignment="Right" Margin="0,0,30,15" Width="200" FontFamily="Arial Black" FontSize="20" Height="40" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
