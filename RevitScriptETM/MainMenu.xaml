<Window x:Class="RevitScriptETM.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:RevitScriptETM" 
        Height="650" Width="1670" Title="Задания">
    <Grid>
        <DataGrid x:Name="tasksDataGrid" ItemsSource="{Binding TaskItems}" AutoGenerateColumns="False" HeadersVisibility="Column" IsReadOnly="True" FontFamily="Arial Black" FontSize="11">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№ задания" Binding="{Binding TaskNumber}" Width="100"/>
                <DataGridTextColumn Header="Раздел от кого задание" Binding="{Binding FromSection}" Width="170"/>
                <DataGridTextColumn Header="Раздел кому задание" Binding="{Binding ToSection}" Width="150"/>
                <DataGridTextColumn Header="Кто выдал задание" Binding="{Binding TaskIssuer}" Width="150"/>
                <DataGridCheckBoxColumn Header="Чек выполнения задания" Binding="{Binding TaskCompleted}" Width="200"/>
                <DataGridTextColumn Header="Кто отработал" Binding="{Binding TaskHandler}" Width="150"/>
                <DataGridCheckBoxColumn Header="Согласование задания" Binding="{Binding TaskCompleted}" Width="200"/>
                <DataGridTextColumn Header="Скриншот экрана" Binding="{Binding ScreenShot}" Width="150"/>
                <DataGridTextColumn Header="Описание задания" Binding="{Binding TaskDescription}" Width="200"/>
                <DataGridTextColumn Header="Вид" Binding="{Binding TaskDescription}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Фильтр заданий" Click="FilterButton_Click" HorizontalAlignment="Left" Margin="30,0,0,15" Width="200" 
        FontFamily="Arial Black" FontSize="20" Height="40" VerticalAlignment="Bottom"/>
        <Button Content="Создать задание" HorizontalAlignment="Right" Margin="0,0,30,15" Width="200" FontFamily="Arial Black" FontSize="20" Height="40" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
